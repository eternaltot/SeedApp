<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffff393b"
    android:gravity="center_vertical"
    tools:context="${relativePackage}.${activityClass}">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:clickable="false"
        android:layout_weight="2"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearMenu" >

        <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/pager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="120dp"/>-->

        <com.example.user.seedapp.com.add.view.AutoScrollViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            />
    </RelativeLayout >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:text="Now Playing : คิดถึง - Bodyslam"
            android:id="@+id/textNowPlaying"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textNowPlaying"
            android:id="@+id/viewseparate"></View>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/viewseparate"
            android:id="@+id/imageView3"
            android:src="@drawable/cover_default"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@id/imageView3"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="MV"
            android:id="@+id/bt_youtube"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:shadowColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="List"
            android:id="@+id/bt_list"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_below="@+id/bt_youtube"
            android:layout_alignStart="@+id/bt_youtube"
            android:layout_marginTop="10dp" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:id="@+id/bt_play"
            android:background="@android:color/white"
            android:layout_marginRight="20dp"
            android:src="@drawable/btn_play"
            android:shadowColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:scaleType="fitXY"
            android:layout_above="@+id/bt_lyrics"
            android:layout_alignStart="@+id/viewseparate" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="Lyrics"
            android:id="@+id/bt_lyrics"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_below="@+id/bt_list"
            android:layout_alignStart="@+id/bt_list"
            android:layout_marginTop="10dp" />

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/seekBar"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:max="100"
            android:progress="0"
            android:indeterminate="false" />
        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/seekBar"
            android:id="@+id/view"
            android:layout_marginTop="10dp"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Next song : ไม่ต่างกัน - 25 Hours"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:id="@+id/textNameSong"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>