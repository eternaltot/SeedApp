                    android:id="@+id/seekBar"
                    android:max="100"
                    android:progress="0"
                    android:indeterminate="false" />
            </LinearLayout>

        </GridLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_seekBar"
            android:layout_centerHorizontal="true"
