<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffff393b"
    android:gravity="center_vertical"
    tools:context="${relativePackage}.${activityClass}">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:clickable="false"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearMenu" >

        <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/pager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="120dp"/>-->

        <com.example.user.seedapp.com.add.view.AutoScrollViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            />


        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            app:radius="4dp"
            app:fillColor="#88FF0000"
            app:pageColor="#FF888888"
            app:strokeColor="#FF000000"
            app:strokeWidth="2dp"
            app:centered="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="10dp"
            android:text="Now Playing : คิดถึง - Bodyslam"
            android:id="@+id/textNowPlaying"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textNowPlaying"
            android:id="@+id/viewseparate"></View>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/viewseparate"
            android:id="@+id/imageView3"
            android:src="@drawable/bodyslam"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@id/imageView3"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="MV"
            android:id="@+id/bt_youtube"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:shadowColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="List"
            android:id="@+id/bt_list"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignEnd="@+id/bt_youtube"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            android:shadowColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="Play"
            android:id="@+id/bt_play"
            android:layout_alignTop="@+id/imageView3"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_toStartOf="@+id/imageView3"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:shadowColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="Lyrics"
            android:id="@+id/bt_lyrics"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignEnd="@+id/bt_play"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            android:shadowColor="@android:color/darker_gray"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/seekBar"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/seekBar"
            android:id="@+id/view"
            android:layout_marginTop="10dp"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Next song : ไม่ต่างกัน - 25 Hours"
            android:id="@+id/textNameSong"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>